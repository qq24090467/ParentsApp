<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btn_corners_radius" />
                    <stroke android:width="1.0dip" android:color="@color/red" android:dashWidth="4.0dip" android:dashGap="2.0dip" />
                    <solid android:color="@color/subscribe_item_drag_bg" />
                    <padding android:left="@dimen/btn_text_padding" android:right="@dimen/btn_text_padding" android:bottom="2.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/btn_corners_radius" />
            <stroke android:width="1.0dip" android:color="@color/red" />
            <solid android:color="@color/subscribe_item_selected_bg" />
            <padding android:left="@dimen/btn_text_padding" android:right="@dimen/btn_text_padding" android:bottom="2.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/btn_corners_radius" />
            <stroke android:width="0.5dip" android:color="@color/red" />
            <solid android:color="@color/subscribe_item_disabled_bg" />
            <padding android:left="@dimen/btn_text_padding" android:right="@dimen/btn_text_padding" android:bottom="2.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/btn_corners_radius" />
            <stroke android:width="0.5dip" android:color="@color/red" />
            <solid android:color="@color/white" />
            <padding android:left="@dimen/btn_text_padding" android:right="@dimen/btn_text_padding" android:bottom="2.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/btn_corners_radius" />
            <stroke android:width="0.5dip" android:color="@color/subscribe_item_normal_stroke" />
            <solid android:color="@color/subscribe_item_selected_bg" />
            <padding android:left="@dimen/btn_text_padding" android:right="@dimen/btn_text_padding" android:bottom="2.0dip" />
        </shape>
    </item>
</selector>