<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@color/white">
   <com.aiparent.parentsapp.view.CircularImage
       android:id="@+id/category_icon"
       android:layout_width="@dimen/eightytwodp"
       android:layout_height="@dimen/eightytwodp"
       android:layout_margin="@dimen/fivedp"
       android:src="@drawable/default_pic"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/category_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:layout_marginLeft="@dimen/fivedp"
            android:layout_marginTop="@dimen/twentydp"
            android:layout_gravity="center"
            android:textSize="30px"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/category_small_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="副标题"
            android:textColor="@color/textcolor_80"
            android:layout_margin="@dimen/fivedp"
            android:layout_gravity="center"
            android:textSize="30px"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>