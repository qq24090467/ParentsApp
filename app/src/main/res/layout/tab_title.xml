<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="@drawable/title_bar_bg" android:layout_width="fill_parent" android:layout_height="@dimen/title_height">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioGroup android:orientation="horizontal"
                android:id="@+id/commentsTypeRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <RadioButton
                    android:textColor="@color/textcolor_80"
                    android:gravity="center"
                    android:id="@+id/radioComments"
                    android:background="@drawable/title_tab_left_selecetor"
                    android:checked="true"
                    android:button="@null"
                    android:text="评论" />
                <RadioButton android:textColor="@color/textcolor_80"
                    android:gravity="center"
                    android:id="@+id/radioFlower"
                    android:background="@drawable/title_tab_right_selecetor"
                    android:button="@null"
                    android:text="鲜花" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>